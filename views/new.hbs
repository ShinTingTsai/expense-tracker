
<div class="container">
  <div class="row">
    <div class='col-12'>
      <div class="row mb-3">
        <div class="col-sm-2">
          *Required
        </div>
        <div class="col-sm-4">
          Please type in your expense
        </div>
        
      </div>
      <form action="/records/create" method="POST">
        <div class="row mb-3">
          <label for="name" class="col-sm-2 col-form-label">Name</label>
          <div class="input-group col-sm-4">
            <input type="text" class="form-control" placeholder="Name" aria-label="name" name="name">
          </div>
        </div>

        <div class="row mb-3">
          <label for="date" class="col-sm-2 col-form-label">Date</label>
          <div class="input-group col-sm-4">
            <input type="date" class="form-control" placeholder="2020-05-24" aria-label="date"
              aria-describedby="basic-addon2" name="date">
            <div class="input-group-append">
              <span class="input-group-text" id="basic-addon2"><i class="far fa-calendar-alt"></i></span>
            </div>
          </div>
        </div>

        <div class="row mb-3">
          <label for="category" class="col-sm-2 col-form-label">category</label>
          <div class="input-group col-sm-4">
            <select id="category" class="form-control" name="category">
              {{#each categoryList}}
              <option value={{@index}}>{{this}}</option>
              {{/each}}
            </select>
          </div>
        </div>

        <div class="row mb-3">
          <label for="amount" class="col-sm-2 col-form-label">amount</label>
          <div class="input-group col-sm-4">
            <input type="text" class="form-control" placeholder="100" aria-label="amount" name='amount'>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <a class="btn btn-secondary mr-3" href="/">Cancel</a>
          <button type="submit">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>



  
